# ReAct Agent Configuration
# Copy this file to .env and update with your actual values

# Application
APP_NAME="ReAct Integral Agent"
APP_VERSION="0.1.0"
DEBUG=true
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://agent_user:agent_pass@localhost:5432/react_agent_db
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Google Gemini AI (Updated for Gemini 2.5 Flash - Better Rate Limits)
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_MODEL_NAME=gemini-2.5-flash
GEMINI_TEMPERATURE=0.1
GEMINI_MAX_TOKENS=8192
GEMINI_TOP_P=0.9
GEMINI_TOP_K=40

# LangGraph Configuration
LANGGRAPH_CHECKPOINTER_TYPE=postgresql
LANGGRAPH_MAX_CONCURRENT_SESSIONS=10
LANGGRAPH_SESSION_TIMEOUT_MINUTES=30
MAX_CONVERSATION_TURNS=50
AGENT_MAX_ITERATIONS=10

# BigTool Configuration
BIGTOOL_ENABLED=true
BIGTOOL_MAX_TOOLS=50
BIGTOOL_SIMILARITY_THRESHOLD=0.7
BIGTOOL_INDEX_BATCH_SIZE=100
BIGTOOL_SEARCH_LIMIT=5
BIGTOOL_VECTOR_STORE=in_memory
BIGTOOL_EMBEDDING_MODEL=text-embedding-004
TOOL_SEARCH_TOP_K=3
MEMORY_STORE_SIZE=1000
BIGTOOL_CACHE_TTL=3600

# Additional Configuration
CALCULATION_CACHE_TTL_HOURS=24
CONVERSATION_HISTORY_LIMIT=100

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
# LOG_FILE=logs/app.log

# Streamlit
STREAMLIT_HOST=0.0.0.0
STREAMLIT_PORT=8501

# Security
SESSION_SECRET=your-secret-key-here
CORS_ORIGINS=["*"]
